<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<ImageView
    android:id="@+id/imgfront"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/exclamatory"
    android:layout_marginBottom="480dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME!                                   TEST YOUR GUTS."
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="120dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/gr"
        android:padding="80dp"
        app:layout_constraintTop_toTopOf="@id/imgfront"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playtonextbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Go! "
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/gr"
        app:layout_constraintTop_toTopOf="@id/bt1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent" />

